{
  "expo": {
    "name": "Torus Platforms",
    "scheme": "torus",
    "slug": "torus",
    "version": "1.0.13",
    "orientation": "portrait",
    "icon": "./assets/torus_zoomed_in.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/torus_w_background.png",
      "resizeMode": "contain",
      "backgroundColor": "#0d111a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "androidStatusBar": {
      "backgroundColor": "#0d111a"
    },
    "ios": {
      "associatedDomains": [
        "applinks:torusplatforms.com"
      ],
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This feature requires access to your camera",
        "NSMicrophoneUsageDescription": "This feature requires access to your microphone",
        "NSPhotoLibraryUsageDescription": "This feature requires access to your camera roll"
      },
      "bundleIdentifier": "com.torusplatforms.torus",
      "buildNumber": "9"
    },
    "android": {
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.AUDIO_RECORDING",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#161718"
      },
      "package": "com.torusplatforms.torus",
      "versionCode": 4
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "e40fe963-468e-40af-92b0-12e18b2616c7"
      }
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Torus to use your location."
        }
      ]
    ],
    "owner": "torusplatforms"
  }
}
